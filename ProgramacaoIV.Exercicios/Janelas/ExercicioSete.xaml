<Window x:Class="SimuladorParcelamento.ExercicioSete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simulador de Pagamento Parcelado" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Valor Total:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20,20,0,0"/>
        
        <TextBox x:Name="txtValorTotal"
                 Width="200" Height="25"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="20,45,0,0"
                 PreviewTextInput="ValidarEntradaNumerica"/>

        <TextBlock Text="Número de Parcelas:"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="20,90,0,0"/>
        
        <ComboBox x:Name="cbParcelas"
                  Width="200" Height="25"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="20,115,0,0"/>

        <Button Content="Calcular Parcelas"
                Width="200" Height="35"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,160,0,0"
                Click="BtnCalcularParcelas_Click"/>
    </Grid>
</Window>
